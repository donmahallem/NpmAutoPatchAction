{
    "name": "@donmahallem/npm-auto-patch-action",
    "version": "0.0.1",
    "description": "Auto Patcher",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": false,
    "keywords": [
        "flow",
        "polar",
        "api",
        "types"
    ],
    "scripts": {
        "test": "mocha",
        "start": "npm run build:live",
        "build:live": "nodemon",
        "build": "tsc",
        "build:ncc": "ncc build ./src/index.ts",
        "test:coverage": "nyc npm run test",
        "lint": "tslint -c tslint.json -p tsconfig-lint.json src/**/*.ts",
        "lint:fix": "tslint --fix -c tslint.json -p tsconfig-lint.json src/**/*.ts",
        "docs": "typedoc --options typedoc.json"
    },
    "homepage": "https://donmahallem.github.io/NpmAutoPatchAction/",
    "author": {
        "name": "donmahallem",
        "email": "donmahallem@users.noreply.github.com",
        "url": "https://github.com/donmahallem"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/donmahallem/NpmAutoPatchAction/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/donmahallem/NpmAutoPatchAction.git"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "./dist/",
        "baseUrl": "./src/",
        "strict": true,
        "esModuleInterop": true
    },
    "devDependencies": {
        "@types/chai": "4.3.3",
        "@types/mocha": "10.0.10",
        "@types/node": "16.11.53",
        "@types/sinon": "10.0.13",
        "@zeit/ncc": "0.22.3",
        "chai": "4.3.6",
        "mocha": "10.8.2",
        "nyc": "15.1.0",
        "sinon": "14.0.0",
        "ts-node": "10.9.1",
        "tslint": "6.1.3",
        "typedoc": "0.23.10",
        "typescript": "4.7.4"
    },
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "typings",
            "src/**/*.spec.ts",
            "**/*.d.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "json",
            "html",
            "text-summary",
            "lcov"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "dependencies": {
        "@actions/core": "~1.9.1",
        "@actions/github": "~5.0.3",
        "@octokit/rest": "~19.0.4",
        "jsonschema": "~1.4.1"
    },
    "files": [
        "dist/*",
        "src/*"
    ]
}
